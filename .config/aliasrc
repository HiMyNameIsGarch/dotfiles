# Dotnet commands
alias dn="dotnet"
alias dnbr="dotnet build && dotnet run"

# Git commands
alias g="git"
alias gadd="git add"
alias gstat="git status"
alias gclone="git clone"
alias gpul="git pull"
alias gpush="git push"
alias grm="git rm"
alias gmv="git mv"
alias grest="git restore"
alias grests="git restore --staged"
alias gcommit="git commit -m"

# If the commands are too long, just make them shorter!
alias :q="exit"
alias fs="ncdu"
alias ka="killall"
alias k="kill"
alias isthere="pacman -Ss"
alias checkbash="checkbashisms"

# Prevent makings mistakes with rm/cp/mv
alias rm="rm -I"
alias mv="mv -i"
alias cp="cp -i"

# ls commands with 'exa'
alias ls="exa -al --color=always --group-directories-first"
alias la="exa -a --color=always --group-directories-first"
alias ll="exa -l --color=always --group-directories-first"
alias lt="exa -aT --color=always --group-directories-first"

# Navigation on directories with 'cd'
alias ..="cd .."
alias ...="cd ../.."
alias .3="cd ../../.."
alias .4="cd ../../../.."

# Update the system
alias pacsyyy="sudo pacman -Syyy"
alias pacsyyu="sudo pacman -Syyu"
alias pacsy="sudo pacman -Syu"
alias pacs="sudo pacman -S"
alias pacr="sudo pacman -R"
alias yays="yay -S"
alias yaysua="yay -Sua"
alias yaysyu="yay -Syu"
alias yayr="yay -R"

# Get fastest mirrors using reflector
alias mirror="sudo reflector --country Romania --age 12 --protocol https --sort rate --save /etc/pacman.d/mirrorlist"
alias mirrorl="sudo reflector --verbose --latest 10 --sort rate --save /etc/pacman.d/mirrorlist"
alias mirrora="sudo reflector --latest 50 --protocol http --protocol https --sort rate --save /etc/pacman.d/mirrorlist"
