# Lightdm theme
LMPATH="$HOME/Dev/lightdm-webkit-doom-theme"
alias lm="cd $LMPATH && ls"
alias lm-edit="cd $LMPATH && $EDITOR $LMPATH"

# Instagram bot
alias ib="cd $HOME/Dev/instagram-bot && ls"
alias ib-edit="cd $HOME/Dev/instagram-bot && $EDITOR main.py"

# Digital Magazine
projPath="$HOME/Dev/DigitalMagazine"
alias opensheet="qutebrowser \"https://docs.google.com/spreadsheets/d/1Dxv6SarPMD09g71ETOdPz1_5WEa5ORjMLzW2oTTZTsQ/edit?usp=sharing_eip&invite=CIf41qIB&ts=60a6a05c\""
alias initnvm='export NVM_DIR="$HOME/.local/share/nvm" ; [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" && nvm use 12.14.0'
alias dm="cd $projPath"
alias dm-status="dm && ls && git status"
alias dm-edit="dm && $EDITOR $projPath"
alias dm-start="dm && initnvm && npm run dev"
alias dm-db="dm && cd src/app/shared/services/Db && ls"
alias dm-models="dm && cd src/app/shared/services/Db/Models && ls"
alias dm-app="dm && cd src/app && ls"
alias ntest="npm test -t "

