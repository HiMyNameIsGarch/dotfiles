# Short some commands
alias vim="nvim"
alias t="touch"
alias cat="bat"
alias qbind="feh ~/Media/Data/qb-bindings.png &"
alias pvim="nvim -c VimBeGood"
alias gvim="nvim -c Git"
alias copy="xclip -sel c <"
alias dev="cd ~/Dev && ls"
alias gr="cd ~/repos && ls"
alias ldf="cd ~/Dev/dotfiles && ls && git status"
alias co="cd ~/.config && ls"
alias sc="cd ~/.local/bin && ls"
alias sdm="cd ~/.local/bin/dmenu && ls"
alias sdb="cd ~/.local/bin/dwm-bar && ls"
alias dl="cd ~/Downloads && ls"

# Media 
alias md="cd ~/Media && ls"
alias hl="cd ~/Media/Highlights && ls"
alias bo="cd ~/Media/Books && ls"
alias da="cd ~/Media/Data && ls"
alias mo="cd ~/Media/Movies && ls"
alias mu="cd ~/Media/Music && ls"
alias ph="cd ~/Media/Photos && ls"
alias to="cd ~/Media/Torrents && ls"
alias vs="cd ~/Media/Videos && ls"
alias wa="cd ~/Media/Wallpapers && ls"
alias yt="cd ~/Media/Youtube && ls"
alias de="cd ~/Media/Devices && ls"
alias le="cd ~/Media/Lectures && ls"
alias pz="cd ~/Media/Puzzles && ls"
alias sch="cd ~/Media/School && ls"
alias bac="cd ~/Media/Bac && ls"
alias scr="cd ~/Media/Screenshots && ls"

# System information
alias psa="ps auxf"

# Parameterless
alias df='df -h'
alias du='du -h'
alias free='free -m'
alias ping="ping -c4"

# Git commands
alias g="git"
alias glog="git log"
alias ginit="git init"
alias gclone="git clone"
alias gadd="git add"
alias gstat="git status"
alias gpull="git pull"
alias gpush="git push"
alias grm="git rm"
alias gmv="git mv"
alias grest="git restore"
alias grests="git restore --staged"
alias gcommit="git commit -m"
alias gcheckout="git checkout"
alias gbcheckout="git checkout"
alias gbranch="git branch"
alias gundo="git reset --soft HEAD~1"
alias gundoH="git reset --hard HEAD~1"
alias ggraph="git log --graph --decorate --oneline"
alias ggraphfull="git log --graph --full-history --all --pretty=format:\"%h%x09%d%x20%s\""

# Grep
alias grep='grep --color=always'
alias egrep='egrep --color=always'
alias fgrep='fgrep --color=always'

# If the commands are too long, just make them shorter!
alias flushdns="sudo systemd-rezolve --flush-caches"
alias fs="ncdu"
alias ka="killall"
alias ka9="killall -9"
alias k="kill"
alias k9="kill -9"
alias checkbash="checkbashisms"

# Prevent makings mistakes with rm/cp/mv
alias rm="rm -I"
alias mv="mv -i"
alias cp="cp -i"

# ls commands with 'exa'
alias ls="exa -al --color=always --group-directories-first --no-time"
alias la="exa -a --color=always --group-directories-first --no-time"
alias ll="exa -l --color=always --group-directories-first --no-time"
alias lt="exa -aT --color=always --group-directories-first --no-time"

# Navigation on directories with 'cd'
alias ..="cd .."
alias ...="cd ../.."
alias .3="cd ../../.."
alias .4="cd ../../../.."

# Short pacman commands
alias pacsyyy="sudo pacman -Syyy"
alias pacsyy="sudo pacman -Syy"
alias pacsyyu="sudo pacman -Syyu"
alias pacsyu="sudo pacman -Syu"
alias pacs="sudo pacman -S"
alias pacr="sudo pacman -R"
alias pacrs="sudo pacman -Rs"
alias pacrns="sudo pacman -Rns"
alias yays="yay -S"
alias yaysua="yay -Sua"
alias yaysyu="yay -Syu"
alias yayr="yay -R"
alias yayrs="yay -Rs"

# Get fastest mirrors using reflector
alias mirror="sudo reflector -c Romania -c Bulgaria -a 12 -p https -p http --sort rate --save /etc/pacman.d/mirrorlist"
alias mirrorl="sudo reflector --verbose --latest 10 --sort rate --save /etc/pacman.d/mirrorlist"
alias mirrora="sudo reflector --latest 50 --protocol http --protocol https --sort rate --save /etc/pacman.d/mirrorlist"
