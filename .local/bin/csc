#!/bin/sh

# Create script (csc)
# This script creates a base script and it opens in your editor of choice!

file="$1"
terminate() { printf "%s\n" "csc: $1" && exit 1 ; }
[ -z "$file" ] && terminate "Cannot create empty file!"
[ -f "$file" ] && terminate "File '$file' already exists!"
[ -d "$file" ] && terminate "Argument '$file' is a directory!"
touch "$file"
option="${2-sh}"

case $option in
    sh) shebang="#!/bin/sh";;
    bash) shebang="#!/bin/bash";;
esac

echo "$shebang" >> "$file"
chmod +x "$file" 
$EDITOR "$file"
