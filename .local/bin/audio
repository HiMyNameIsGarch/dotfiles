#!/bin/sh
soundCard="HDA-Intel - HDA Intel PCH"

alsa(){
    local cardNum="$(cat /proc/asound/cards | grep "$soundCard" | awk '{print $1}')"
    amixer -c $cardNum sset "Auto-Mute Mode" "$1" </dev/null
}

case "$1" in
    "0") alsa "Line Out+Speaker";;
    "1") alsa "Speaker Only" ;;
    *) printf "Incorect parameter!\n";;
esac
