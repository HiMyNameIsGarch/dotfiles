#!/bin/sh

#
# mdisk (mount disk)
# A script that mounts/unmounts usbs
#

OPERATION=$(printf "Mount\nUnmount" | dmenu -i -p "Choose: ")
[ -z "$OPERATION" ] && exit 1
[ "$OPERATION" != "Mount" ] && [ "$OPERATION" != "Unmount" ] && exit 1

terminate() { notify-send -u "$1" "$2" "$3" && exit 1 ; }

TMP="/tmp/tempdisks"
# Make sure file is empty
[ -f "$TMP" ] && rm "$TMP" && touch "$TMP"
# get all usbs
VOL=$(lsblk -d -o NAME,TRAN | grep usb | awk '{print $1}')
for d in $VOL; do
    lsblk | grep "$d.*part" >> "$TMP"
done

[ -s "$TMP" ] || terminate "critical" "No usb found" "No usb were found, try again!"

getoption() { dmenu -i -l 10 -p "Select Usb: " < "$TMP" ; }

getdisk() { DC="${OPTION#*s}" ; echo "/dev/s${DC%% *}" ; }

getlocation() {
    rm "$TMP"
    DC="${OPTION#*s}"
    LOC="$HOME/Media/Devices/s${DC%% *}" # change this if you want another location
    mkdir -p "$LOC"
    echo "$LOC"
}

mountDisk() {
    sed -i '/\//d' "$TMP" 
    [ -s "$TMP" ] || terminate "critical" "No usb found to mount!"
    OPTION="$(getoption)"
    [ -z "$OPTION" ] && exit 1
    LOC="$(getlocation)"
    DM="$(getdisk)"
    # Check if dir is empty (make sure you don't mount on something existing)
    cd "$LOC" || terminate "critical" "Cannot change directory to\n$LOC"
    [ "$(ls | wc -l)" = "0" ] || terminate "critical" "Cannot mount" "Cannot mount on \n$LOC \nThere are files"
    if sudo -A mount "$DM" "$LOC"; then
        terminate "normal" "Success" "Usb mounted on\n$LOC"
    else
        terminate "critical" "Usb cannot be mounted, run in terminal to get more output"
    fi
}

unmountDisk() {
    sed -i '/\//!d' "$TMP"
    [ -s "$TMP" ] || terminate "critical" "No usb found to unmount!"
    OPTION="$(getoption)"
    [ -z "$OPTION" ] && exit 1
    LOC="$(getlocation)"
    DM="$(getdisk)"
    if sudo -A umount "$DM"; then
        rm -r "$LOC" 
        terminate "normal" "Success" "Usb unmounted succesfully"
    else
        terminate "critical" "Usb cannot be unmounted, run in terminal to get more output"
    fi
}

case $OPERATION in 
    Mount) mountDisk ;;
    Unmount) unmountDisk ;;
esac
