#!/bin/sh

EDITOR="alacritty -e vim"

configs="qutebrowser $HOME/.config/qutebrowser/config.py
quickmarks $HOME/.config/qutebrowser/quickmarks
alacritty $HOME/.config/alacritty/alacritty.yml
youtube-dl $HOME/.config/youtube-dl/config
dunst $HOME/.config/dunst/dunstrc
dwm $HOME/suckless/dwm/config.def.h 
dwm-autostart $HOME/.local/share/dwm/autostart.sh 
dwmblocks $HOME/suckless/dwmblocks/blocks.def.h
bash $HOME/.bashrc 
zsh $HOME/.config/zsh/.zshrc
vim $HOME/.vimrc 
nvim $HOME/.config/nvim/init.vim 
dmenu $HOME/suckless/dmenu/config.def.h
picom $HOME/.config/picom/picom.conf
aliases $HOME/.config/aliasrc 
profile $HOME/.config/profile
this $HOME/.local/bin/dmenu/confs" # opens this file

choice=$(printf '%s' "$configs" | dmenu -i -l 10 -p 'Edit config: ' | awk '{print $2}')
[ -z "$choice" ] && exit 1
[ ! -f "$choice" ] && 
    notify-send -u critical "Error" "File $choice\nDoes not exist!" && exit 1

$EDITOR "$choice" && exit 1

