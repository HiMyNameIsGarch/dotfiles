#!/bin/sh

EDITOR="alacritty -e vim"

configs="qutebrowser $HOME/.config/qutebrowser/config.py \n
quickmarks $HOME/.config/qutebrowser/quickmarks \n
alacritty $HOME/.config/alacritty/alacritty.yml \n
youtube-dl $HOME/.config/youtube-dl/config \n
qtile $HOME/.config/qtile/config.py \n
qtile-autostart $HOME/.config/qtile/autostart.sh \n
dunst $HOME/.config/dunst/dunstrc \n
dwm $HOME/suckless/dwm/config.def.h \n
dwm-autostart $HOME/.local/share/dwm/autostart.sh \n
dwmblocks $HOME/suckless/dwmblocks/blocks.def.h \n
bash $HOME/.bashrc \n
zsh $HOME/.config/zsh/.zshrc \n
vim $HOME/.vimrc \n
fish $HOME/.config/fish/config.rasi \n
rofi $HOME/.config/rofi/config.rasi \n
dmenu $HOME/suckless/dmenu/config.def.h \n
picom $HOME/.config/picom/picom.conf \n
aliases $HOME/.config/aliasrc \n
profile $HOME/.config/profile \n
this $HOME/.local/bin/dmenu/confs" # opens this file

choice=$(printf '%s' "$configs" | dmenu -i -l 10 -p 'Edit config: ' | awk '{print $2}')
[ -z "$choice" ] && exit 1
[ ! -f "$choice" ] && 
    notify-send -u critical "Error" "File $choice\nDoes not exist!" && exit 1

$EDITOR "$choice" && exit 1

