#!/bin/sh


PERC=$(cat /sys/class/power_supply/BAT1/capacity)
STAT=$(cat /sys/class/power_supply/BAT1/status)
[ "$STAT" = "Discharging" ] && STAT="--" || STAT="++"

echo "B:$PERC%$STAT"

if [ "$PERC" -lt 25 ] && [ "$STAT" = "Discharging" ]; then
    notify-send -c critical "Battery under 25%"
fi

exit 0
